# LFS Build Configuration
# This file contains default build configuration options

# Build version and toolchain
LFS_VERSION=12.0
GLIBC_VERSION=2.38
GCC_VERSION=13.2.0
BINUTILS_VERSION=2.41
LINUX_KERNEL_VERSION=6.5.5

# Build environment
MAKEFLAGS=-j4
CFLAGS=-O2
CXXFLAGS=-O2
LDFLAGS=""

# Build options
BUILD_KERNEL=true
BUILD_GRUB=true
OPTIMIZE_SIZE=false
INCLUDE_GLIBC_DEV=true
INCLUDE_DOCUMENTATION=false

# Partition and filesystem settings
# (These would be customized per deployment)
ROOT_FILESYSTEM=ext4
BOOT_SIZE=500M
ROOT_SIZE=20G

# Output and logging
LOG_LEVEL=INFO
ARCHIVE_OUTPUT=true
OUTPUT_COMPRESSION=gzip

# Timeout settings (in seconds)
BUILD_TIMEOUT=7200
INDIVIDUAL_PACKAGE_TIMEOUT=1800

# Network settings
DOWNLOAD_TIMEOUT=300
RETRY_ATTEMPTS=3
MIRROR_URL="https://www.linuxfromscratch.org/lfs/view/12.0"

# Optional: Email notifications
SEND_NOTIFICATIONS=false
SMTP_SERVER=""
SMTP_PORT=587
FROM_EMAIL=""
TO_EMAIL=""
