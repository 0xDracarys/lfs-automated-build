rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Builds collection - requires authentication
    match /builds/{buildId} {
      // Anyone authenticated can read any build (for monitoring/learning purposes)
      allow read: if isAuthenticated();
      
      // Only authenticated users can create builds with their own userId
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.email == request.auth.token.email;
      
      // Only owner can update their own build (status changes from Cloud Functions are server-side)
      allow update: if isOwner(resource.data.userId);
      
      // Only owner can delete their own build
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Build logs collection - requires authentication
    match /buildLogs/{logId} {
      // Anyone authenticated can read logs
      allow read: if isAuthenticated();
      
      // Only server (Cloud Functions) can write logs
      // In practice, this will be handled by Firebase Admin SDK which bypasses rules
      allow write: if false;
    }
    
    // User profiles collection (for future use)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
