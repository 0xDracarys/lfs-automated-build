# LFS Builder Installer Configuration
# =====================================
# This file contains configuration settings for the LFS installation process

[Installation]
AppName=LFS Builder
Version=1.0.0
Publisher=LFS Automated Build Team
InstallPath=%ProgramFiles%\LFS-Builder
CreateDesktopShortcuts=true
CreateStartMenuShortcuts=true

[System]
MinWindowsBuild=19041
MinDiskSpaceGB=30
MinRAMGB=4
RecommendedRAMGB=8
RequireVirtualization=true

[WSL]
DistroName=Ubuntu
WSLVersion=2
DefaultLFSPath=/mnt/lfs
CreateLFSStructure=true

[Build]
# Parallel build jobs (-j flag for make)
# Set to 0 for automatic detection (nproc)
ParallelJobs=0

# Download mirror for LFS sources
SourceMirror=https://www.linuxfromscratch.org/lfs/downloads/12.0

# Enable verbose logging
VerboseLogging=true

# Automatically resume failed builds
AutoResume=true

[Environment]
# LFS environment variables to set
LFS=/mnt/lfs
LFS_TGT=x86_64-lfs-linux-gnu
LC_ALL=POSIX
PATH=/tools/bin:/usr/bin:/bin

[Firestore]
# Firebase/Firestore integration (optional)
EnableFirestore=false
ProjectID=lfs-automated-build
LogBuildsToCloud=false

[Features]
# Enable/disable optional features
WebDashboard=true
RemoteBuilds=false
CloudStorage=false
ProgressTracking=true

[Scripts]
# Build scripts to install
MainBuildScript=BUILD-LFS-CORRECT.ps1
StatusCheckScript=CHECK_BUILD_STATUS.ps1
ShellScript=ENTER-LFS-SHELL.ps1
NextPackageScript=build-next-package.ps1

[Shortcuts]
# Desktop shortcuts configuration
Shortcut1Name=LFS Builder
Shortcut1Target=BUILD-LFS-CORRECT.ps1
Shortcut1Description=Start LFS Build Process

Shortcut2Name=LFS Shell
Shortcut2Target=ENTER-LFS-SHELL.ps1
Shortcut2Description=Enter LFS Build Environment

Shortcut3Name=Check Build Status
Shortcut3Target=CHECK_BUILD_STATUS.ps1
Shortcut3Description=Monitor LFS Build Progress

[Packages]
# Ubuntu packages to install in WSL
BuildEssential=build-essential
BuildTools=bison,texinfo,gawk,m4
NetworkTools=wget,curl
DevelopmentTools=git,vim
OptionalTools=htop,tmux

[Paths]
# Important directories
SourcesDir=/mnt/lfs/sources
ToolsDir=/mnt/lfs/tools
BuildDir=/mnt/lfs/build
LogsDir=/mnt/lfs/logs
BackupDir=/mnt/lfs/backup

[Logging]
LogLevel=INFO
LogToFile=true
LogFilePath=%TEMP%\lfs-installer.log
RotateLogFiles=true
MaxLogSizeMB=10

[Advanced]
# Advanced configuration (experts only)
CustomKernelConfig=false
IncludeNetworking=true
CreateISO=true
OptimizationLevel=O2
StripBinaries=true
