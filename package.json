{
  "name": "lfs-automated",
  "version": "1.0.0",
  "description": "Automated Linux From Scratch compilation using Firebase and Cloud Run",
  "main": "index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "serve": "firebase emulators:start",
    "build": "npm run build:functions",
    "build:functions": "cd functions && npm run build",
    "deploy": "firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting",
    "start": "node functions/index.js"
  },
  "keywords": [
    "lfs",
    "linux",
    "firebase",
    "cloud-run"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.7.0"
  },
  "devDependencies": {
    "firebase-tools": "^12.9.0"
  }
}
